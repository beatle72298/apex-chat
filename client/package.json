{
  "name": "it-chat-client",
  "version": "1.0.0",
  "description": "Apex Admin Secure Chat Client",
  "author": "Apex Admin",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beatle72298/apex-chat.git"
  },
  "main": "main.js",
    "scripts": {
      "start": "electron .",
      "build": "electron-builder"
    },
    "build": {
      "appId": "com.apex.itchat",
      "productName": "Apex Chat",
      "directories": {
        "output": "dist"
      },
      "icon": "icon.png",
      "win": {
        "target": "nsis",
        "artifactName": "ApexChat-Win-Setup-${version}.${ext}"
      },
      "mac": {
        "target": [
          "pkg"
        ],
        "artifactName": "ApexChat-Mac-${version}-${arch}.${ext}"
      },
      
      "files": [
        "**/*",
        "!node_modules/**",
        "node_modules/ws/**"
      ]
    },
    "dependencies": {
      "ws": "^8.18.0"
    },
    "devDependencies": {
      "electron": "^32.0.0",
      "electron-builder": "^24.13.3"
    }
  }
  