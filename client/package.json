{
  "name": "it-chat-client",
  "version": "1.0.0",
  "main": "main.js",
    "scripts": {
      "start": "electron .",
      "build": "electron-builder"
    },
    "build": {
      "appId": "com.apex.itchat",
      "productName": "Apex Chat",
      "directories": {
        "output": "dist"
      },
      "win": {
        "target": "nsis",
        "icon": "icon.png"
      },
      "mac": {
        "target": "pkg",
        "icon": "icon.png"
      },
      "files": [
        "**/*",
        "!node_modules/**",
        "node_modules/ws/**"
      ]
    },
    "dependencies": {
      "ws": "^8.18.0"
    },
    "devDependencies": {
      "electron": "^32.0.0",
      "electron-builder": "^24.13.3"
    }
  }
  